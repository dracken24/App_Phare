<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourPath.Views.EventDetailPage">

    <ScrollView>
        <Frame BorderColor="#006666" 
               CornerRadius="10" 
               HasShadow="True" 
               Padding="0"
               BackgroundColor="LightBlue">

            <Grid Padding="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="5*" />
                </Grid.RowDefinitions>

                <Frame BorderColor="#006666" 
                       CornerRadius="10" 
                       HasShadow="True" 
                       BackgroundColor="LightCyan" 
                       Padding="15"
                       HeightRequest="250">

                    <ScrollView>

                        <StackLayout Grid.Row="0">

                            <Label x:Name="subLabel"
                                   Grid.Row="0"
                                   FontAttributes="Bold"
                                   TextColor="#006666"/>

                            <Label x:Name="startTLabel"
                                   Grid.Row="1"
                                   FontAttributes="Bold"
                                   TextColor="#006666"/>

                            <Label x:Name="endTLabel"
                                   Grid.Row="2"
                                   FontAttributes="Bold"
                                   TextColor="#006666"/>

                            <Label x:Name="noLabel"
                                   Grid.Row="3"
                                   FontAttributes="Bold"
                                   TextColor="#006666"/>
                        </StackLayout>
                    </ScrollView>
                </Frame>

